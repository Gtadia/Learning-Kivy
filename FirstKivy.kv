MainWidget:


<MainWidget>: # The definition of our main widget
    Button:
        text: "Hello" # The default position of the button is (0, 0) from the bottom left corner...
        size: 400, 200 # The default size is 100px by 100px
        pos: 100, 200 # The default position of the button is (0, 0) from the bottom left corner...

    Button: # Since this second button on top of the first button, we can't see the first button
        text: "Hello2"
        size: "400dp", "200dp" # dp stands for "density independent pixels" and they adjust based on the size of the window
        pos: "10dp", "100dp" # The default position of the button is (0, 0) from the bottom left corner...# The default position of the button is (0, 0) from the bottom left corner...# The default position of the button is (0, 0) from the bottom left corner...

    Button:
        text: "Hello 3"
        size: "100dp", "80dp"
        pos: "100dp", "300dp"
        color: 0, 1, 0, 1

    Label: # Label only displays text on the screen (and you use the same basic properties as the button)
        text: "Label"
        size: "100dp", "90dp"
        pos: "200dp", "500dp"
        color: 0, 1, 0, 1    # (from 0 to 100%/0 to 1) (alpha (a) is visibility/transparency)